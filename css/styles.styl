borderColor = darken(white, 10%)
vTopSpace = 100px
hRgihtSpace = 50px
vBottomSpace = 30px
_base = #ff6c2d

.hero
	height 100vh
	
.hero-content,
.hero-login
	padding 0
	position relative
	height 100%
	
.hero-bg-wrapper
	position relative
	top 0
	left 0
	height 100%
	width 100%
	overflow hidden
	


.hero-bg-img,
.hero-bg-mask
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	
.hero-bg-img
	background-size cover
	background-position center center
	z-index 1
	background-repeat no-repeat

.hero-bg-mask
	z-index 2
	background black
	opacity .5

.hero-content
	// z-index 10
	color white	

.hero-caption
	z-index 10
	top 0
	left 0
	padding-top vTopSpace
	position absolute
	width 50%
	padding-left hRgihtSpace
	

.hero-caption-title
	margin-top 0
	font-size 60px
	line-height 1em
	margin-bottom vBottomSpace

.hero-caption-text
	margin-bottom 0
	font-size 20px
	letter-spacing 0.33px
	opacity .8

.hero-footer
	z-index 10
	position absolute
	bottom 0
	left 0
	padding vBottomSpace hRgihtSpace
	width 100%
	
.hero-footer-nav
	position relative
	margin-bottom vBottomSpace

.hero-footer-navbar,
.hero-footer-social-list
	list-style none
	margin 0
	padding 0
	> li
		display inline-block
		
.hero-footer-navbar
	> li
		margin-right (hRgihtSpace/3)
		letter-spacing 0.33px
		> a
			color white
			opacity .66
			&:hover
				color white
				opacity 1
		&:last-child
			margin-right 0
		
.hero-footer-social-list
	position absolute
	top 0
	right 0
	
.hero-footer-copyright > p
	margin-bottom 0
	> a
		color _base
		font-weight bold
		&:hover
			color _base

.hero-login
	// background red
	padding-top vTopSpace
	background lighten(black, 15%)
	
.hero-login-tabs
	.nav-tabs
		border-bottom 1px solid borderColor
		> li
			> a
				border-radius 0 !important
				border none
				border-bottom 2px solid transparent
			&.active > a
			&.active > a:hover,
			&.active > a:focus
				border none
				border-bottom 2px solid borderColor
	.tab-pane
		padding vBottomSpace hRgihtSpace